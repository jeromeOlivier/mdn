extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label.col-form-label(for='name') Genre:
            input#name.form-control(type='text', placeholder='Fantasy, Poetry, etc' name='name' value=(undefined === genre ? '' : genre.name))
            button.btn.btn-primary.mt-3(type='submit') Submit

            if errors
                ul
                    each error in errors
                        li!= error.msg

